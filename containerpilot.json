{
  "consul": "{{ .CONSUL_ADDR }}",
  "preStart": "/opt/capi/bin/fetch-api-pubkey",
  "services": [
    {
      "name": "{{if .SERVICE_NAME}}{{ .SERVICE_NAME }}{{else}}capi{{end}}",
      "port": 8080,
      "health": "/usr/bin/curl --silent --show-error --output /dev/null localhost:8080",
      "poll": 1,
      "ttl": 2,
      "interfaces": ["inet6", "inet"]
    }
  ]
}
