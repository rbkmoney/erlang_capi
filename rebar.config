%% Common project erlang options.
{erl_opts, [

    % mandatory
    debug_info,
    %warnings_as_errors,
    warn_export_all,
    warn_missing_spec,
    warn_untyped_record,
    warn_export_vars,

    % by default
    warn_unused_record,
    warn_bif_clash,
    warn_obsolete_guard,
    warn_unused_vars,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_deprecated_function

    % at will
    % bin_opt_info
    % no_auto_import
    % warn_missing_spec_all
]}.

%% Common project dependencies.
{deps, [
    {cowboy, "1.0.4"},
    {hackney, "1.5.7"},
    {genlib, {git, "https://github.com/rbkmoney/genlib.git", {branch, "master"}}},
    {jose, {git, "https://github.com/potatosalad/erlang-jose.git", {tag, "1.7.9"}}},
    {woody, {git, "git@github.com:rbkmoney/woody_erlang.git", {branch, "master"}}},
    {lager, "3.0.2"},
    {base64url, {git, "https://github.com/dvv/base64url.git", {ref, "f2c64ed8b9bebc536fad37ad97243452b674b837"} }},
    {rfc3339,  {git, "git://github.com/talentdeficit/rfc3339.git", {ref, "6cce18dc0934b88ae56d4a31f39699f0f66dbaee"}}},
    {cowboy_cors, {git, "https://github.com/danielwhite/cowboy_cors.git", {ref, "62fc0ad2cfda41e555e08a6a964d281515b66a93"}}}
]}.

%% XRef checks
{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_functions_calls,
    deprecated_functions
]}.
% at will
% {xref_warnings, true}.

%% Tests
{cover_enabled, true}.

%% Relx configuration
{relx, [
    {release, { capi , "0.1.0"}, [
        capi,
        sasl
    ]},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.

%% Dialyzer static analyzing
{dialyzer, [
    {warnings, [
        % mandatory
        unmatched_returns,
        error_handling,
        race_conditions,
        unknown
    ]},
    {plt_apps, all_deps}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true},
            {overlay, [
                {mkdir, "var"},
                {copy, "script/fetch-api-pubkey", "bin/fetch-api-pubkey"}
            ]}
        ]}
    ]},
    {test, [
        {deps, [
            {cowlib, {git, "https://github.com/ninenines/cowlib.git", {tag, "1.0.0"}}}
        ]}
    ]}
]}.

{plugins, [
    rebar3_run
    % in case of Thrift usage
    % {rebar3_thrift_compiler, {git, "https://github.com/rbkmoney/rebar3_thrift_compiler.git", {branch, "master"}}}
]}.
